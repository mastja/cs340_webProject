			<a href="/seach-schedules">Search Schedules</a>
</header>

<section>
<div class = "table">
<form id="addregistration" action="/registrations" method="post">
<div class = "header">
	<h3>Register a Student:</h3>	
	</div>
			<table>
			<tr>
				<td>Student: </td>
				<td><select id="reg_student_id" name="reg_student_id"> 
        			{{#each studentRegistrations}}
        			<option value="{{student_id}}">{{student_id}}, {{student_fname}} {{student_lname}}</option>
        			{{/each}}
    				</select>
				</td>
			</tr>
			<tr>
				<td>Class: </td>
				<td><select id="reg_class_id" name="reg_class_id"> 
        			{{#each classRegistrations}}
        			<option value="{{class_id}}">{{class_id}}, {{class_name}}</option>
        			{{/each}}
    				</select>
				</td>
			</tr>
				<td><input type="submit" id="Submit" value = "Submit"></td>
			</tr>
			</table>
		</form>
	</div>

    <br>
  <div class = "header">
                <h3>Current Registrations</h3>
                </div>
  	
	<table>
		
		<thead>
		<table id = "t2">
			<tr>
				<th>Registration ID</th>
				<th>Student ID</th>
				<th>Student Name</th>
				<th>Class ID</th>
				<th>Class Name</th>
				<th>Delete</th>
			</tr>
		</thead>

		<tbody>
			{{#each registrations}}
			<tr>
				<td>{{registration_id}}</td>
				<td>{{reg_student_id}}</td>
				<td>{{student_fname}} {{student_lname}}</td>
				<td>{{reg_class_id}}</td>
				<td>{{class_name}}</td>
				<td><button onclick="deleteRegistration({{registration_id}})">Delete</button></td>
			</tr>
			{{/each}}
		</tbody>
	</table>
</section>
