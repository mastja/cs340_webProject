<header>
	<nav class="navBar">
			<a href="/">Home</a>
			<a href="/students">Students</a>
			<a href="/majors">Majors</a>
			<a href="/classes">Classes</a>
			<a href="/dorms">Dorms</a>
			<a href="/registrations">Registrations</a>
</header>

<section>
<div class = "table">
<form id="addstudent" action="/students" method="post">
<div class = "header">
	<h3>Add Student</h3>
	</div>
			<table>
			<tr>
				<td>Student First Name: </td>
				<td><input type="text" id="student_fname" name="student_fname"></td>
			</tr>
			<tr>
				<td>Student Last Name: </td>
				<td><input type="text" id="student_lname" name="student_lname"></td>
			</tr>
			<tr>
				<td>Email: </td>
				<td><input type="text" id="email" name="email"></td>
			</tr>
			<tr>
				<td>GPA: </td>
				<td><input type="number" step="0.01" min="0" max="4.00" id="gpa" name="gpa"></td>
			</tr>
			<tr>
				<td>Major: </td>
				<td><select name="major_id"> 
					<option value=NULL>No Major</option>
        			{{#each majors}}
        			<option value="{{major_id}}">{{major_name}}</option>
        			{{/each}}
    				</select>
				</td>
			</tr>
			<tr>
				<td>Dorm: </td>
				<td><select name="dorm_id"> 
        			{{#each dorms}}
        			<option value="{{dorm_id}}">{{dorm_name}}</option>
        			{{/each}}
    				</select>
				</td>
			</tr>
				<td><input type="submit" id="Submit" value = "Submit"></td>
			</tr>
			</table>
		</form>
	</div>
    	<br>
<div class = "table">
	<form id="search-schedules" action="" method=""></form>
     <div class = "header">
        <h3>Search for Student Class Schedule</h3>
        </div>
        <table>
            <tr>
				<td>Student: </td>
				<td><select id="reg_student_id_search" name="reg_student_id"> 
        			{{#each students}}
        			<option value="{{student_id}}">{{student_id}}, {{student_fname}} {{student_lname}}</option>
        			{{/each}}
    				</select>
				</td>
            </tr>
            <tr>
                <td><input type="button" value="Search" onclick="searchStudentSchedule()"></td>
            </tr>
        </table>
    </form>
<br>
	<table>
		<div class = "header">
                <h3>Current Students</h3>
                </div>

		<thead>
		<table id = "t2">
			<tr>
				<th>Student ID</th>
				<th>First Name</th>
				<th>Last Name</th>
				<th>Email</th>
				<th>GPA</th>
				<th>Major ID</th>
				<th>Dorm ID</th>
				<th>Update</th>
				<th>Delete</th>
			</tr>
		</thead>

		<tbody>
			{{#each students}}
			<tr>
				<td>{{student_id}}</td>
				<td>{{student_fname}}</td>
				<td>{{student_lname}}</td>
				<td>{{email}}</td>
				<td>{{gpa}}</td>
				<td>{{major_id}}</td>
				<td>{{dorm_id}}</td>
           		<td><a href="/students/{{student_id}}">Update</a></td>
				<td><button onclick="deleteStudent({{student_id}})">Delete</button></td>
			</tr>
			{{/each}}
		</tbody>
	</table>
</section>
